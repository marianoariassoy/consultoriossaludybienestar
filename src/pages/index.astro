---
import Layout from "@layouts/Default.astro";
import ButtonMain from "@components/base/ButtonMain.astro";
import HeroMain from "@components/hero/HeroMain.astro";
import SectionMuted from "@components/section/SectionMuted.astro";
import Container from "@components/section/Container.astro";
import SectionTitle from "@components/section/SectionTitle.astro";
import IconBlock from "@components/content/IconBlock.astro";
import Toolbar from "@components/content/doctors/grid/Toolbar.astro";
import Filters from "@components/content/doctors/grid/Filters.astro";
import Grid from "@components/content/doctors/grid/Grid.astro";
import SideStatsRight from "@components/content/features/SideStatsRight.astro";
import SideStatsLeft from "@components/content/features/SideStatsLeft.astro";

import Cta from "@components/content/Cta.astro";
import Testimonials from "@components/content/Testimonials.astro";
---

<Layout title="Home">
  <HeroMain />

  <SectionMuted>
    <Container>
      <SectionTitle
        title="Nuestros servicios"
        subtitle="Explorá nuestras especialidades y descubrí cómo podemos ayudarte a alcanzar una vida más saludable y plena. ¡Estamos acá para!"
        minititle="Servicios"
      />

      <div class="grid grid-cols-2 md:grid-cols-3 ltablet:grid-cols-4 lg:grid-cols-4 gap-x-6 gap-y-12" x-intersect="activeStep = ''" id="servicios">
        <!-- Item -->
        <div>
          <IconBlock
            title="Psicología"
            text="Orientación TCC (Terapia Cognitivo Conductual), atención a adolescentes,  adultos, psicotécnicos."
            icon="ph:heartbeat-duotone"
            class="'text-primary-600'"
          />
        </div>
        <div>
          <IconBlock
            title="Psiquiatría"
            text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Tibi hoc incredibile, quod beatissimum."
            icon="ph:brain-duotone"
            class="'text-primary-600'"
          />
        </div>
        <div>
          <IconBlock
            title="Psicopedagogía"
            text="Atención a niños de 6 a 15 años. Experiencia en dificultades de aprendizaje."
            icon="ph:baby-duotone"
            class="'text-primary-600'"
          />
        </div>
        <div>
          <IconBlock
            title="Nutrición"
            text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Tibi hoc incredibile, quod beatissimum."
            icon="ph:person-duotone"
             class="'text-rose-500'"
          />
        </div>

        <div>
          <IconBlock
            title="Masoterapia"
            text="Masajes descontracturantes y drenaje linfático manual."
            icon="ph:hand-soap-duotone"
            class="'text-rose-500'"
          />
        </div>
        <div>
          <IconBlock
            title="Talleres Niños"
            text="Talleres para niños de 3 a 16 años"
            icon="ph:person-duotone"
             class="'text-primary-600'"
          />
        </div>

        <div>
          <IconBlock
            title="Evaluación TEA y Neurocognitiva"
            text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Tibi hoc incredibile, quod beatissimum."
            icon="ph:calendar-duotone"
            class="'text-primary-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Terapia grupal de Adicciones"
            text="Lunes de 17:30 a 19hs. 4 encuentros en el mes."
            icon="ph:calendar-duotone"
            class="'text-primary-600'"
          />
        </div>
      </div>
    </Container>
  </SectionMuted>

  <SectionMuted class="'border-b border-muted-200 dark:border-muted-800'">
    <Container>
      <SectionTitle
        title="Nuestros profesionales"
        subtitle="Cada profesional trabaja desde su orientación o enfoque en conexión con otras areas, buscando las herramientas que puedan ayudar a cada paciente."
        minititle="Profesioanales"
        class="'mx-auto text-center'"
      />

      <div id="profesionales" x-data="doctors()"  x-intersect="activeStep = 'spy-1'">
        <Toolbar />

        <!--Grid wrapper-->
        <div class="py-10">
          <div class="grid grid-cols-12 md:gap-12 pb-20">
            <!--Filters-->
            <div class="hidden lg:block col-span-12 lg:col-span-3">
              <Filters />
            </div>
            <!--Content-->
            <div class="col-span-12 lg:col-span-9">
              <!--Subgrid-->
              <Grid />
            </div>
          </div>
         
        </div>
      </div>
    </Container>
  </SectionMuted>

  <!-- <SectionMuted>
    <Container>
      <SectionTitle
        title="Pricing Options"
        subtitle="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Tibi hoc incredibile, quod beatissimum."
        minititle="Simple Pricing"
        class="'mx-auto text-center'"
      />
      <Pricing />
    </Container>
  </SectionMuted> -->

  <SectionMuted>
    <Container>
      <SectionTitle
        title="Algunos Testimonios"
        subtitle="Descubrí las experiencias reales de quienes han confiado en nosotros. Compartimos sus historias, opiniones y resultados, reflejando el impacto positivo que hemos tenido en sus vidas. Tu bienestar también puede ser nuestra próxima historia de éxito."
        minititle="Nuestros Pacientes"
        class="'mx-auto text-center'"
      />
      <Testimonials />
    </Container>
  </SectionMuted>

  <SectionMuted>
    <Container>
      <SectionTitle
        title="Ubicación"
        subtitle="Descubrí las experiencias reales de quienes han confiado en nosotros. Compartimos sus historias, opiniones y resultados, reflejando el impacto positivo que hemos tenido en sus vidas. Tu bienestar también puede ser nuestra próxima historia de éxito."
        minititle="Ubicación"
        class="'mx-auto text-center'"
      />
      
MAPA
      
    </Container>
  </SectionMuted>


  <SectionMuted>
    <Container>
      <Cta />
    </Container>
  </SectionMuted>
</Layout>
